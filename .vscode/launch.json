{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (fastapi dev)",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": ["dev", "src/backend/main.py"],
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": true
    },
    {
      "name": "Run Vite Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack",
      "configurations": ["FastAPI (fastapi dev)", "Run Vite Dev"]
    }
  ]
}
